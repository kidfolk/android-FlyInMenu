<?xml version="1.0" encoding="utf-8"?>
<org.kidfolk.flyinmenu.RootView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kidfolk="http://schemas.android.com/apk/res/org.kidfolk.flyinmenu"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    kidfolk:host="@+id/host"
    kidfolk:menu="@+id/menu" >

    <include
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/menu_item" />

    <include
        android:id="@+id/host"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/host_item" />

</org.kidfolk.flyinmenu.RootView>